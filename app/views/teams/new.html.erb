<h1>New Team</h1>


<%= form_with scope: :team, url: teams_path, local: true do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
    <p>
      <%= form.label :player_one %><br>
      <%= form.text_field :player_one %>
    </p>

    <p>
      <%= form.label :player_two %><br>
      <%= form.text_field :player_two %>
    </p>

    <p>
      <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Back', teams_path %>